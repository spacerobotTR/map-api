<div id="layout-sidenav" class="<% if local_assigns[:horizontal] == true %>layout-sidenav-horizontal sidenav-horizontal container-p-x flex-grow-0<% else %>layout-sidenav sidenav-vertical<% end %> sidenav bg-sidenav-theme"
   data-turbolinks='false'>
  <% if local_assigns[:horizontal] != true %>
  <!-- Brand demo (see assets/css/demo/demo.css) -->
  <div class="app-brand demo">
    <!-- <span class="app-brand-logo demo bg-primary">

    </span> -->
    <a href="/" class="app-brand-text demo sidenav-text font-weight-normal ml-2">VASTT</a>
    <a href="javascript:void(0)" class="layout-sidenav-toggle sidenav-link text-large ml-auto">
      <i class="ion ion-md-menu align-middle"></i>
    </a>
  </div>

  <div class="sidenav-divider mt-0"></div>
  <% end %>
  <!-- Inner -->
  <ul class="sidenav-inner<% if local_assigns[:horizontal] != true %> py-1<% end %>">

    <!-- Projects -->

    <li class="sidenav-item<%= current_page?(root_path) ? ' active' : '' %>">
      <%= link_to root_path, class: "sidenav-link" do %><i class="sidenav-icon ion ion-ios-albums"></i><div>Home</div><% end %>
    </li>
    <li class="sidenav-item<%= current_page?('/incidents') || request.fullpath.start_with?('/incidents/') ? ' active' : '' %>">
      <%= link_to incidents_path, class: "sidenav-link" do %><i class="sidenav-icon ion ion-ios-albums"></i><div>Incidents</div><% end %>
    </li>
    <li class="sidenav-item<%= current_page?('/maps') || request.fullpath.start_with?('/maps/') ? ' active' : '' %>">
      <%= link_to maps_path, class: "sidenav-link" do %><i class="sidenav-icon ion ion-ios-albums"></i><div>Map</div><% end %>
    </li>
  </ul>
</div>
<!-- / Layout sidenav -->
